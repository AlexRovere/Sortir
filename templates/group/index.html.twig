{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Liste des groupes
{% endblock %}

{% block body %}

    <div class="flex flex-col gap-5 h-full">

    <div class="flex justify-between items-center">
        <h1 class="py-2 text-3xl font-extrabold md:text-5xl lg:text-6x text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">
                Liste de vos groupes privés</h1>
        <div>
            <a href="{{ path('app_group_create') }}">
                <button type="button"
                        class="text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center ">
                    Créer un groupe
                </button>
            </a>
        </div>
    </div>

        {% if groups %}
    <div class="max-sm:hidden relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Nom du groupe
                </th>
                <th scope="col" class="px-6 py-3">
                    Membres
                </th>
                <th scope="col" class="px-6 py-3">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ group.name }}
                    </th>
                    <td class="px-6 py-4">
                        {{ group.users.count }} Membres
                    </td>
                    <td class="px-6 py-4">
                        <a href="{{ path('app_group_detail', {id: group.id}) }}">Afficher</a>
                        <a href="{{ path('app_group_update', {id: group.id}) }}">Modifier</a>
                        <a href="{{ path('app_group_delete', {id: group.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
            <div class="sm:hidden p-2 text-gray-700 dark:text-gray-300 text-center relative overflow-x-auto shadow-md sm:rounded-lg">
                {% for group in groups %}
                <ul class="border border-gray-300 dark:border-gray-700 mb-3">
                    <li class="py-2 text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 font-medium border-b border-gray-300 dark:border-gray-700">{{ group.name }}</li>
                    <li class="py-1 font-light text-sm">{{ group.users.count }} Membres</li>
                    <li class="py-1 font-light text-sm">
                        <a href="{{ path('app_group_detail', {id: group.id}) }}" class="text-blue-300 px-2">Afficher</a>
                        <a href="{{ path('app_group_update', {id: group.id}) }}" class="text-orange-300 px-2">Modifier</a>
                        <a href="{{ path('app_group_delete', {id: group.id}) }}" class="text-red-300 px-2">Supprimer</a>
                    </li>
                </ul>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-3xl dark:text-white grow flex justify-center items-center">Vous n'avez aucun groupe privé pour le moment !</div>
        {% endif %}

    </div>
{% endblock %}
