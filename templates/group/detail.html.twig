{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Détail du groupe {{ group.name }}
{% endblock %}

{% block body %}

<h1 class="py-2 text-3xl text-center font-extrabold md:text-5xl lg:text-6x text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">
    {{ group.name }}
</h1>

    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="max-lg:hidden w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Pseudo
                </th>
                <th scope="col" class="px-6 py-3">
                    Nom
                </th>
                <th scope="col" class="px-6 py-3">
                    Prénom
                </th>
                <th scope="col" class="px-6 py-3">
                    Téléphone
                </th>
                <th scope="col" class="px-6 py-3">
                    Email
                </th>
                <th scope="col" class="px-6 py-3">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>

            {% for user in group.users %}
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.pseudo }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.firstname }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.name }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.phone }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.email }}
                    </th>
                    <td class="px-6 py-4">
                       <a href="{{ path('app_user_detail', {userId: user.id}) }}">Afficher le profil</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="lg:hidden p-2 text-gray-700 dark:text-gray-300 text-center relative overflow-x-auto shadow-md sm:rounded-lg">
            {% for user in group.users %}
                <ul class="border border-gray-300 dark:border-gray-700 mb-3">
                    <li class="py-2 text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 font-medium border-b border-gray-300 dark:border-gray-700">{{ user.pseudo }}</li>
                    <li class="py-1 font-light text-sm">{{ user.firstname }} {{ user.name }}</li>
                    <li class="py-1 font-light text-sm">{{ user.phone }}</li>
                    <li class="py-1 font-light text-sm">{{ user.email }}</li>
                    <li class="py-1 font-light text-sm text-blue-700 dark:text-blue-300"><a href="{{ path('app_user_detail', {userId: user.id}) }}">Afficher le profil</a></li>
                </ul>
            {% endfor %}
        </div>
    </div>


{% endblock %}

