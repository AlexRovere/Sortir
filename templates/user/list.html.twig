{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}

    <h1 class="py-2 text-3xl text-center font-extrabold md:text-5xl lg:text-6x text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">
        {{ title }}
    </h1>

    <div class="flex justify-between items-center">

        <div>
            <a href="{{ path('app_user_import') }}">
                <button type="button"
                        class="text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                    Importer des utilisateurs
                </button>
            </a>
        </div>
        <div class="flex flex-row justify-center items-center gap-5 ">
            <button type="button" class="text-white bg-gradient-to-br from-cyan-500 to-lime-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                <a href="{{ path('app_register') }}">Créer un compte Utilisateur</a>
            </button>
        </div>
    </div>

    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Pseudo
                </th>
                <th scope="col" class="px-6 py-3">
                    Nom
                </th>
                <th scope="col" class="px-6 py-3">
                    Prénom
                </th>
                <th scope="col" class="px-6 py-3">
                    Téléphone
                </th>
                <th scope="col" class="px-6 py-3">
                    Email
                </th>
                <th scope="col" class="px-6 py-3">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>

            {% for user in users %}
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.pseudo }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.firstname }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.name }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.phone }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ user.email }}
                    </th>
                    <td class="px-6 py-4">
                        <a href="{{ path('app_user_detail', {userId: user.id}) }}">Afficher le profil</a>
                        {% if user.isActive %}
                            <a href="{{ path('app_user_desactivate', {userId: user.id}) }}">Désactiver</a>
                        {% else %}
                            <a href="{{ path('app_user_activate', {userId: user.id}) }}">Réactiver</a>
                        {% endif %}
                        <a href="{{ path('app_user_delete', {userId: user.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}

