{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ title }}{% endblock %}

{% block body %}
    <div class="container h-full max-w-lg mx-auto flex flex-col">
        <h1 class="text-center dark:text-white">{{ title }}</h1>
        {{ form_start(userForm) }}

        {{ form_row(userForm.pseudo) }}
        {{ form_row(userForm.email) }}
        {{ form_row(userForm.plainPassword) }}
        {{ form_row(userForm.name) }}
        {{ form_row(userForm.firstname) }}
        {{ form_row(userForm.phone) }}
        {{ form_row(userForm.site) }}
        {{ form_row(userForm.profilePicture) }}


        <div class="flex flex-row justify-center items-center gap-5 ">
            <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                S'enregistrer
            </button>
        </div>
        {{ form_end(userForm) }}
    </div>
{% endblock %}
